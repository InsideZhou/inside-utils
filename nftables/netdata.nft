#!/usr/sbin/nft -f


table ip netdata {
    define safehosts = {
        192.168.0.0/16,
        10.0.4.16/22,
        127.0.0.1
    }

    set ratelimit {
        typeof ip saddr
        size 1048576
    }

    chain netdata {
        type filter hook input priority filter

	ip saddr != $safehosts tcp dport 19999 ct state new ct count over 6 add @ratelimit { ip saddr limit rate over 6/minute } reject with tcp reset
	tcp dport 19999 accept
    }
}
